{
  "name": "define-context",
  "description": "Define and hook into a typed React Context, assured of a descriptive error message if the value was not provided.",
  "keywords": [
    "react",
    "context",
    "factory"
  ],
  "author": "Olesj Vladyslavovitsj Bilous",
  "license": "MIT",
  "version": "4.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Olesj-Bilous/define-context"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/define-context.umd.js",
  "module": "./dist/define-context.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/define-context.es.js",
      "require": "./dist/define-context.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^22.1.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.3",
    "vitest": "^0.34.6"
  }
